@model IEnumerable<ck_project.lead>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @if (ViewBag.m != null)
    {
        <script type="text/javascript">
 $(document).ready(function () {
toastr.success('@ViewBag.m');
 });

        </script>
    }
}

@{
    if (HttpContext.Current.User.IsInRole("Administrator"))
    {
        @Html.Partial("_AdminMenu")
    }
    else

    {
        @Html.Partial("_MainMenu")
    }
}

<div class="container">
    <h2>Leads</h2>

    @using (Html.BeginForm("ListLead", "Lead", FormMethod.Post))
    {
        @Html.TextBox("Search", ViewData.TemplateInfo.FormattedModelValue,
        new { placeholder = "Type project name here" });
        @Html.DropDownList("type", (IEnumerable<SelectListItem>)ViewBag.lead_type, htmlAttributes: null);
        <input type="date" name="start" />
        <input type="date" name="end" />



        <input type="submit" value="Search" />

    }
    @*@using (Html.BeginForm("ListLead2", "Lead", FormMethod.Get))
        {
          //  @Html.TextBox("Search", ViewData.TemplateInfo.FormattedModelValue, new { placeholder = "Type project name here" });
            @Html.TextBox("search", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control ", @type = "date",  placeholder = "2017/01/01 11:11:11" });


            <input type="submit" value="Search" />
        }*@
    @*<div class='col-xs-4 '>
            <label class='control-label'>Last Status Date </label>
            @Html.EditorFor(model => model.last_status_date, new { htmlAttributes = new { @class = "form-control ", @type = "date" } })
            @Html.ValidationMessageFor(model => model.last_status_date, "", new { @class = "text-danger" })
        </div>*@
    <p>

        @Html.ActionLink("Create a New Lead", "ListCustomers", "Customers")


    </p>
    <table class="table table-striped">
        <thead class="mdb-color darken-3">
            <tr>
                <th>
                    Project Name
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    SalesPerson
                </th>
                <th>
                    Project Type
                </th>
                <th>
                    Project Status
                </th>
                <th>
                    Create Date
                </th>
                <th>
                    Last Update Date
                </th>

                <th>
                    Branch
                </th>

                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="6"> Sorry, There are no leads with the entered project name
                <td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {


                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.project_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customer.customer_firstname)

                        @Html.DisplayFor(modelItem => item.customer.customer_lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employee.emp_firstname)
                        @Html.DisplayFor(modelItem => item.employee.emp_lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.project_type.project_type_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.project_status.project_status_name)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.lead_date)*@
                        @item.lead_date.ToString("dd MMM yyyy")
                    </td>
                    <td>
                        @{
                            if (item.Last_update_date == item.lead_date)
                            {
                                @Html.DisplayName(" - ")

                            }
                            else
                            {
                                @Html.DisplayName(item.Last_update_date.ToString("dd MMM yyyy"))
                            }

                        }

                    </td>

                    <td>
                        @*@Html.DisplayFor(modelItem => item.address.city)*@
                        @Html.DisplayFor(modelItem => item.branch.branch_name)
                    </td>


                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.lead_number }) |
                        @Html.ActionLink("Details", "Details", new { id = item.lead_number }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.lead_number },
            new { onclick = "return confirm('Are you sure you wish to delete the lead?');" })

                    </td>
                </tr>
                                }
                            }
    </table>

    <div>
        @Html.ActionLink("Back to List", "ListLead")
    </div>

</div>






