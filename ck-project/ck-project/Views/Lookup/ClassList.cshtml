@model IEnumerable<ck_project.project_class>

<p>
    @Html.ActionLink("Create New", "ClassAdd")
</p>
<table class="table table-striped">
    <thead class="mdb-color darken-3">
        <tr>
            <th>
                Class Name
            </th>

            <th></th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.class_name)
                </td>

                <td>

                    @Html.ActionLink("Delete", "ClassDelete", new { id = item.class_number },
                    new { onclick = "return confirm('Are you sure you wish to delete the project class?');" })
                </td>
            </tr>
        }

</table>
