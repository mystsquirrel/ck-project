@model IEnumerable<ck_project.project_status>

<p>
    @Html.ActionLink("Create New", "StatusAdd")
</p>
<table class="table table-striped">
    <thead class="mdb-color darken-3">
        <tr>
            <th>
                Project Status Name
            </th>

            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.project_status_name)
                </td>

                <td>

                    @Html.ActionLink("Delete", "StatusDelete", new { id = item.project_status_number },
                    new { onclick = "return confirm('Are you sure you wish to delete the status?');" })
                </td>
            </tr>
        }

</table>
