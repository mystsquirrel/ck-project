@model IEnumerable<ck_project.lead>

@{
    ViewBag.Title = "AdminMainPage";
}

@Html.Partial("_AdminMenu")

<h2>Projects</h2>

<table class="table table-striped">
    <thead class="mdb-color darken-3">
        <tr>
            <th>Designer</th>
            <th>Project Type</th>
            <th>Customer Name</th>
            <th>Project Title</th>
            <th>Status</th>
            <th>Last Modified</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.employee.emp_firstname) 
                    @Html.DisplayFor(modelItem => item.employee.emp_lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project_type.project_type_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer.customer_firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project_status.project_status_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_update_date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "LeadPage", "Home", new { id = item.lead_number, edit = true }, null) |
                    @Html.ActionLink("View", "LeadPage", "Home", new { id = item.lead_number, edit = false }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
